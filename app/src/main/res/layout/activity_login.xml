<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:padding="@dimen/margem_de_tela_login"
    tools:context="com.cursoandroid.whatsappclone.whatsappclone.activity.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/logo_largura"
        android:layout_height="@dimen/logo_altura"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/id_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Digite seu e-mail"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:shadowColor="@color/branco_branco"
        android:textColor="@color/branco_branco"
        android:textColorHighlight="@color/branco_branco"
        android:textColorHint="#DDDDDD" />

    <Button
        android:id="@+id/id_botao_logar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id_login_senha"
        android:layout_marginTop="43dp"
        android:background="@color/colorPrimaryDark"
        android:elevation="0dp"
        android:text="@string/botao_logar"
        android:theme="@style/botao_padrao"/>

    <EditText
        android:id="@+id/id_login_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id_login_email"
        android:ems="10"
        android:hint="Digite sua senha"
        android:inputType="textPassword"
        android:padding="10dp"
        android:shadowColor="@color/branco_branco"
        android:textColor="@color/branco_branco"
        android:textColorHighlight="@color/branco_branco"
        android:textColorHint="#DDDDDD"
        />

    <Button
        android:id="@+id/id_botao_cadastrar"

        android:layout_width="230dp"
        android:layout_height="25dp"
        android:layout_below="@+id/id_botao_logar"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:elevation="0dp"
        android:shadowColor="@color/colorPrimary"
        android:text="NÃ£o tem uma conta? Cadastre-se"
        android:textAllCaps="false"
        android:theme="@style/botao_padrao"
        />

</RelativeLayout>
