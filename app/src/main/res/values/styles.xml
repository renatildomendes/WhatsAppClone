<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhatsAppCloneTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/branco_branco</item>
        <item name="android:windowBackground">@color/branco_branco</item>
        <item name="android:textColor">@color/preto_preto</item>
    </style>
    
    <style name="botao_padrao" parent="Theme.AppCompat.Light">
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/preto_preto</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="corTextoAbas">
        <item name="android:textColor">@color/branco_branco</item>
    </style>

</resources>
